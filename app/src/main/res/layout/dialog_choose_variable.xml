<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:id="@+id/choose_variable_dialog"
    android:padding="16dp">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Use an Existing Variable"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textSize="15sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/existing_variable_list"
            android:choiceMode="singleChoice"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No existing variable"
            android:id="@+id/empty"
            android:textStyle="italic"
            android:textColor="#8f8f8f" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add a New Variable"
            android:id="@+id/textView2"
            android:textColor="#424242"
            android:textStyle="bold"
            android:textSize="15sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="bottom|left"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_height="wrap_content"
                android:text="Variable Name: "
                android:id="@+id/textView4"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="0dp" />

            <EditText
                android:layout_height="wrap_content"
                android:id="@+id/new_variable_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="bottom|left"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:weightSum="2"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Default Value: "
                android:id="@+id/textView5"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="#000000" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/variable_default_value"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>